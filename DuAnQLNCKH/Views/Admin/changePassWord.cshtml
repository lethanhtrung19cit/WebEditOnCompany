@model DuAnQLNCKH.Models.Account
@{ ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }
<style>
    .col-md-4 {
        display: inline-block;
    }

    .col-md-5 {
        display: inline-block;
    }
</style>
<div class="page-header" style="margin-top:20px">

    <h2>THAY ĐỔI MẬT KHẨU</h2>
</div>
<hr />

@Html.ValidationMessage("result", "", new { @class = "text-danger", @style = "color:green !important" })
<br />
@using (Html.BeginForm("changePassWord1", "Admin", FormMethod.Post))
{

    <center>

        <div class="row">
            <div style="padding-left: 240px;" class="col-md-4">
                Mật khẩu cũ:

            </div>
            <div class="col-md-5" style="padding-right: 100px; ">
                <input class="form-control" id="OldPassword" name="OldPassword" type="password" size="40">

            </div>
        </div>
        <div style="margin-top:20px" class="row">
            <div style="padding-left: 229px;" class="col-md-4">
                Mật khẩu mới:


            </div>
            <div class="col-md-5" style="padding-right: 100px; ">
                <input class="form-control" id="NewPassword" name="NewPassword" type="password" size="40">

            </div>
        </div>
        <div style="margin-top:20px" class="row">
            <div style="padding-left: 172px;" class="col-md-4">

                Xác nhận lại mật khẩu:

            </div>
            <div class="col-md-5" style="padding-right: 100px; ">
                <input class="form-control" id="ConfirmPassword" name="ConfirmPassword" type="password" size="40">

            </div>
        </div>

        <div style="margin:30px 0 0 150px" class="form-group">
            <input class="btn btn-primary" style="font-weight: bold; color: white" type="submit" value="Đổi mật khẩu" />

        </div>
        <div>
            @Html.ValidationMessage("OldPassword", "", new { @class = "text-danger" })<br />
            @Html.ValidationMessage("NewPassword", "", new { @class = "text-danger" })<br />
            @Html.ValidationMessage("ConfirmPassword", "", new { @class = "text-danger" })
        </div>
    </center>}
